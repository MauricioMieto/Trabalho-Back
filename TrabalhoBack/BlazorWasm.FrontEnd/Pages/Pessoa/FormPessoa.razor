<EditForm Model="Pessoa" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Nome:</label>
        <div>
            <InputText class="form-control" @bind-Value="@Pessoa.Nome" />
            <ValidationMessage For="(() =>Pessoa.Nome)" />
        </div>
        <label>Idade:</label>
        <div>
            <InputNumber class="form-control" @bind-Value="@Pessoa.Idade" />
            <ValidationMessage For="(() =>Pessoa.Idade)" />
        </div>
        <label>Sexo:</label>
        <div>
            <select class="custom-select form-control" @bind="@Pessoa.Sexo">
                <option value="Masculino" selected> Masculino</option>
                <option value="Feminino"> Feminino</option>
            </select>
        </div>
    </div>

    <button class="btn btn-success" type="submit">Salvar</button>
</EditForm>


@code {
    [Parameter] public Pessoa Pessoa { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}


